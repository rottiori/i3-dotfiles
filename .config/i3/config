############################################
# bar settings (input comes from i3blocks) #
############################################

# Start i3bar to display a workspace bar
# (plus the system information i3status finds out, if available)
bar {
		font pango: Noto Sans bold 10
		#font pango:FiraCode Nerd Font bold 9
		status_command i3blocks -c ~/.config/i3/i3blocks.conf
	    	position top
#	    	i3bar_command i3bar --transparency
# it could be that you have no primary display set: set one (xrandr --output <output> --primary)
# reference: https://i3wm.org/docs/userguide.html#_tray_output
		    tray_output none
		    tray_padding 0

# When strip_workspace_numbers is set to yes,
# any workspace that has a name of the form
# “[n][:][NAME]” will display only the name.
strip_workspace_numbers yes
##strip_workspace_name no

		    colors {
		    separator          $subtext1
		    background         $dark
		    statusline         $overlay1
#                          		border 		        bg		txt		indicator
		focused_workspace	$dark		   	$dark		$lavender	$purple
		active_workspace	$dark   	   	$dark		$surface1	$purple
		inactive_workspace	$dark   		$dark		$surface1	$purple
		urgent_workspace	$dark	    		$dark		$urgentred	$urgentred
	}
}

#####################################
# Application menu handled by rofi: #
#####################################

## rofi bindings fancy application menu
bindsym $mod+d exec --no-startup-id rofi -modi drun -show drun \
		-config ~/.config/rofi/rofidmenu.rasi

## Rofi en modo "window switcher"
bindsym Mod1+Tab exec --no-startup-id rofi -show window \
		-config ~/.config/rofi/rofidmenu.rasi


